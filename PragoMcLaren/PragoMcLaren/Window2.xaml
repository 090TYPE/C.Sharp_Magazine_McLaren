<Window x:Class="PragoMcLaren.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PragoMcLaren"
        mc:Ignorable="d"
        Title="Window2" Height="450" Width="350">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Регистрация" FontSize="18" TextAlignment="Center"/>
            <TextBlock Margin="0,5,0,0" Text="Логин" FontSize="13"/>
            <TextBox Margin="0,5,0,0" Width="126"/>
            <TextBlock Text="Пароль" Margin="0,5,0,0" FontSize="13"/>
            <TextBox Margin="0,5,0,0" Width="126"/>
            <TextBlock Text="Повторите пароль" Margin="0,5,0,0" FontSize="13"/>
            <TextBox Margin="0,5,0,0" Width="126"/>
            <Button Margin="0,5,0,0" Width="126" Height="30" Click="Reg_Button_Click" x:Name="Reg_Button" Content="Регестрация"/>
            <Button Margin="0,5,0,0" Width="126" Height="30" Click="Exit_Button_Click" x:Name="Exit_Button" Content="Выход" />
        </StackPanel>

    </Grid>
</Window>
