<Window x:Class="PragoMcLaren.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PragoMcLaren"
        mc:Ignorable="d"
        Title="Window1" Height="400" Width="350">
    <Grid Margin="0,0,0,-6">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,82,0,0">
            <TextBlock Text="Вход" FontSize="18" TextAlignment="Center"/>
            <TextBlock Margin="0,5,0,0" Text="Логин" FontSize="13"/>
            <TextBox Margin="0,5,0,0" Width="126"/>
            <TextBlock Text="Пароль" Margin="0,5,0,0" FontSize="13"/>
            <TextBox Margin="0,5,0,0" Width="126"/>
            <Button Margin="0,5,0,0" Width="126" Height="30" Click="Vhod_Button_Click" x:Name="Vhod_Button">Вход</Button>
            <Button Margin="0,5,0,0" Width="126" Height="30" Click="Reg_Button_Click" x:Name="Reg_Button">Регестрация</Button>
            <Button Margin="0,5,0,0" Width="126" Height="30" Click="Exit_Button_Click" x:Name="Exit_Button" >Выход</Button>
        </StackPanel>
    </Grid>
</Window>
